<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorLightYello"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!!!"
        android:textColor="@color/colorBlack"
        android:id="@+id/congrats_txt"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        />

    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/sample_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/congrats_txt"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:src="@drawable/dlogo2"
        />

    <com.cooltechworks.views.ScratchTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cashback â‚¹55"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/sample_image"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

</RelativeLayout>